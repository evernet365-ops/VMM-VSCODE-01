{
  "name": "evernet-vmm",
  "private": true,
  "version": "0.1.0",
  "description": "EverNet VMM full-stack development environment and service skeleton",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "corepack pnpm -r --parallel --filter @evernet/* run dev",
    "build": "corepack pnpm -r --filter @evernet/* run build",
    "typecheck": "corepack pnpm -r --filter @evernet/* run typecheck",
    "lint": "corepack pnpm -r --filter @evernet/* run lint",
    "test": "corepack pnpm -r --filter @evernet/* run test",
    "bootstrap": "node scripts/bootstrap.mjs",
    "doctor": "node scripts/doctor.mjs",
    "verify": "node scripts/verify.mjs",
    "stack:up": "node scripts/stack-up.mjs",
    "stack:wait": "node scripts/stack-wait.mjs",
    "stack:down": "node scripts/stack-down.mjs",
    "stack:status": "node scripts/stack-status.mjs",
    "stack:logs": "node scripts/stack-logs.mjs",
    "stack:diag": "node scripts/stack-diag.mjs",
    "stack:clean": "node scripts/stack-clean.mjs",
    "stack:smoke": "node scripts/stack-smoke.mjs",
    "drill:webhook": "node scripts/drill-webhook-failure.mjs",
    "drill:db": "node scripts/drill-db-failure.mjs --confirm-stop-db --auto-recover",
    "drill:circuit": "node scripts/drill-circuit-observe.mjs",
    "release:cut": "node scripts/release-cut.mjs",
    "migrate": "node scripts/migrate.mjs",
    "seed": "node scripts/seed.mjs",
    "docs:check": "node scripts/check-doc-contract.mjs",
    "api-docs:build": "node scripts/api-docs.mjs",
    "env:check": "node scripts/check-env-contract.mjs",
    "deploy:env:check": "node scripts/check-deploy-env.mjs",
    "openapi:check": "node scripts/check-openapi-access-class.mjs",
    "contract:reporting": "node scripts/contract-check-reporting-engine.mjs",
    "contract:orchestrator": "node scripts/contract-check-ai-orchestrator.mjs",
    "contract:scheduler": "node scripts/contract-check-scheduler.mjs",
    "contract:test": "corepack pnpm run contract:reporting && corepack pnpm run contract:orchestrator && corepack pnpm run contract:scheduler",
    "governance:files": "node scripts/check-governance-files.mjs",
    "governance:contract": "node scripts/check-governance-contract.mjs",
    "skill:check": "node scripts/check-skill-contract.mjs",
    "docs:sync:check": "node scripts/check-doc-sync.mjs",
    "governance:check": "corepack pnpm run governance:files && corepack pnpm run governance:contract && corepack pnpm run docs:sync:check",
    "mcp:generate": "node scripts/mcp-generate.mjs",
    "mcp:check": "node scripts/mcp-check.mjs",
    "mcp:update": "corepack pnpm run mcp:generate && corepack pnpm run mcp:check",
    "diag:collect": "node scripts/diag-collect.mjs",
    "smoke": "node scripts/smoke-test.mjs",
    "smoke:aggregate": "node scripts/smoke-aggregate.mjs",
    "smoke:connector": "node scripts/connector-vss-smoke.mjs",
    "smoke:scheduler:ntp": "node scripts/scheduler-ntp-smoke.mjs",
    "smoke:vivotek": "node scripts/vivotek-smoke.mjs",
    "smoke:sampo": "node scripts/sampo-smoke.mjs",
    "smoke:sampo:private": "node scripts/sampo-private-smoke.mjs",
    "smoke:sampo:private:ps1:local": "powershell -ExecutionPolicy Bypass -File scripts/sampo-private-smoke.ps1 -EnvFile .env.sampo.local",
    "smoke:sampo:private:ps1:example": "powershell -ExecutionPolicy Bypass -File scripts/sampo-private-smoke.ps1 -EnvFile .env.sampo.example",
    "smoke:sampo:private:ps1:help": "powershell -ExecutionPolicy Bypass -File scripts/sampo-private-smoke.ps1 -Help",
    "smoke:sampo:ps1": "powershell -ExecutionPolicy Bypass -File scripts/sampo-smoke.ps1",
    "smoke:sampo:ps1:help": "powershell -ExecutionPolicy Bypass -File scripts/sampo-smoke.ps1 -Help",
    "smoke:sampo:ps1:example": "powershell -ExecutionPolicy Bypass -File scripts/sampo-smoke.ps1 -EnvFile .env.sampo.example",
    "smoke:sampo:ps1:local": "powershell -ExecutionPolicy Bypass -File scripts/sampo-smoke.ps1 -EnvFile .env.sampo.local"
  },
  "dependencies": {
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/pg": "^8.15.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}

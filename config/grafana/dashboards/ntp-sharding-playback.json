{
  "id": null,
  "uid": "evernet-ntp-shard-playback",
  "title": "EverNet NTP Sharding Playback",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "NTP Offset (ms)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "vmm_ntp_offset_ms",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "NTP Server Requests",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(vmm_ntp_server_requests_total[5m])) by (service, site_id, outcome)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Shard Bucket Distribution",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(vmm_poll_shard_bucket_total[5m])) by (service, site_id, bucket)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Playback Slow Query Alerts",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(vmm_playback_slow_query_alert_total[5m])) by (service, site_id)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Playback Fallback Ratio",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(vmm_playback_fallback_total[5m])) by (service, site_id)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Playback Cache Hit/Miss",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(vmm_playback_cache_hits_total[5m])) by (service, site_id)",
          "refId": "A",
          "legendFormat": "hits {{service}}/{{site_id}}"
        },
        {
          "expr": "sum(rate(vmm_playback_cache_miss_total[5m])) by (service, site_id)",
          "refId": "B",
          "legendFormat": "miss {{service}}/{{site_id}}"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 }
    }
  ]
}
